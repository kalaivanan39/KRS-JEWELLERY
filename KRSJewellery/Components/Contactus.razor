@page "/contactus"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - KRS Jewellery</title>
</head>
<body style="font-family: Arial, sans-serif; margin: 0; padding: 0; background-color: #f4f4f4;">

    <!-- Header Section -->
    <header style="background-color: #333; color: white; padding: 20px; text-align: center;">
        <h1 style="margin: 0;">Contact Us</h1>
        <p style="margin: 5px 0 0; font-size: 18px;">We'd love to hear from you</p>
    </header>

    <!-- Contact Information Section -->
    <section style="padding: 40px; background-color: #fff; text-align: center;">
        <h2 style="font-size: 26px; color: #333; margin-bottom: 20px;">Get in Touch with KRS Jewellery</h2>
        <p style="font-size: 16px; color: #666; max-width: 700px; margin: 0 auto 40px;">
            Whether you have a question about our products, need assistance with an order, or want to schedule a visit to our store, we're here to help. Reach out to us through the form below or using the contact details provided.
        </p>

        <div style="max-width: 700px; margin: 0 auto; text-align: left;">
            <p style="font-size: 16px; color: #333;"><strong>Phone:</strong> +91 9600639363</p>
            <p style="font-size: 16px; color: #333;"><strong>Email:</strong> support@krsjewellery.com</p>
            <p style="font-size: 16px; color: #333;"><strong>Store Address:</strong> 184, 3rd St, Ponmeni, Madurai, Tamil Nadu 625016</p>
            <p style="font-size: 16px; color: #333;"><strong>Business Hours:</strong> Monday - Saturday: 09:00 AM - 09:00 PM</p>
        </div>
    </section>

    <!-- Contact Form Section -->
    <section style="padding: 40px; background-color: #f9f9f9;">
        <h2 style="text-align: center; color: #333; font-size: 26px; margin-bottom: 40px;">Send Us a Message</h2>

        <form action="/submit-form" method="POST" style="max-width: 600px; margin: 0 auto; background-color: #fff; padding: 30px; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">

            <label for="name" style="display: block; margin-bottom: 10px; font-size: 16px; color: #333;">Your Name:</label>
            <input type="text" id="name" name="name" required style="width: 100%; padding: 10px; margin-bottom: 20px; border: 1px solid #ccc; border-radius: 4px; font-size: 16px;">

            <label for="email" style="display: block; margin-bottom: 10px; font-size: 16px; color: #333;">Your Email:</label>
            <input type="email" id="email" name="email" required style="width: 100%; padding: 10px; margin-bottom: 20px; border: 1px solid #ccc; border-radius: 4px; font-size: 16px;">

            <label for="subject" style="display: block; margin-bottom: 10px; font-size: 16px; color: #333;">Subject:</label>
            <input type="text" id="subject" name="subject" required style="width: 100%; padding: 10px; margin-bottom: 20px; border: 1px solid #ccc; border-radius: 4px; font-size: 16px;">

            <label for="message" style="display: block; margin-bottom: 10px; font-size: 16px; color: #333;">Your Message:</label>
            <textarea id="message" name="message" rows="6" required style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; font-size: 16px;"></textarea>

            <button type="submit" onclick="alert('Thank you, We will respond to your soon!!')" style="width: 100%; background-color: #28a745; color: white; padding: 15px; margin-top: 20px; border: none; border-radius: 4px; font-size: 18px; cursor: pointer;">
                Send Message
            </button>
        </form>
    </section>

    <!-- Footer Section -->
    <footer style="background-color: #333; color: white; padding: 20px; text-align: center;">
        <p style="margin: 0;">Thank you for reaching out to KRS Jewellery</p>
        <p style="margin: 5px 0;">We will respond to your inquiry as soon as possible.</p>
    </footer>

</body>
</html>
